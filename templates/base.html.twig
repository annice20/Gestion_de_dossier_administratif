            position: relative;
            margin-left: 50px;
        }

        #notificationsDropdown {
            position: relative;
            display: inline-block;
        }

        #notification-count {
            position: absolute;
            top: 0;
            right: 0;
            transform: translate(50%, -50%);
            font-size: 0.75em;
            border-radius: 50%;
        }


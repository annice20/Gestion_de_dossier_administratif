<body>
<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #C5ABAB;">
    <div class="container-fluid">
        <a class="navbar-brand" href="#"> <img src="images/logo.png" alt="" width="40" height="40"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" href="{{ path('app_accueil') }}">Accueil</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('services_liste_index') }}">Services</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_page') }}">Profil</a></li>

                <li class="nav-item dropdown">
                    <a class="nav-link" href="#" id="notificationsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-bell"></i>
                        <span id="notification-count" class="badge bg-danger rounded-pill">0</span>
                    </a>
                    <ul id="notifications-list" class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationsDropdown">
                        <li class="dropdown-header">Notifications</li>
                        <li class="dropdown-item"><span class="text-muted">Aucune nouvelle notification.</span></li>
                    </ul>
                </li>

                <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a></li>
            </ul>
        </div>
    </div>
</nav>

{% block body %}
<!-- Contenu spécifique à chaque page -->
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', () => {
    const notificationCountSpan = document.getElementById('notification-count');
    const notificationsList = document.getElementById('notifications-list');
    const bellIcon = document.getElementById('notificationsDropdown');

    // Récupère notifications non lues
    async function fetchNotifications() {
        try {
            const response = await fetch('{{ path("app_get_unread_notifications") }}');
            const notifications = await response.json();
            notificationCountSpan.textContent = notifications.length;
            notificationCountSpan.style.display = notifications.length > 0 ? 'inline-block' : 'none';

            notificationsList.innerHTML = '<li class="dropdown-header">Notifications</li>';
            if (!notifications.length) {
                notificationsList.innerHTML += '<li class="dropdown-item"><span class="text-muted">Aucune nouvelle notification.</span></li>';
            } else {
                notifications.forEach(n => {
                    const li = document.createElement('li');
                    li.classList.add('dropdown-item');
                    li.innerHTML = `<h6>${n.titre}</h6><p>${n.message}</p><small>${n.horodatage}</small>`;
                    notificationsList.appendChild(li);
                });
            }
        } catch(e) { console.error('Erreur notifications :', e); }
    }

    fetchNotifications();
    setInterval(fetchNotifications, 10000); // refresh toutes les 10s

    // Marquer notifications comme lues au clic
    bellIcon.addEventListener('click', async () => {
        try {
            await fetch('{{ path("app_mark_notifications_as_read") }}', { method: 'POST' });
            notificationCountSpan.textContent = '0';
            notificationCountSpan.style.display = 'none';
        } catch(e){ console.error(e); }
    });

    // Si vous avez des checkboxes pour "Validé"/"Refusé" dans vos tables
    document.querySelectorAll('.status-checkbox').forEach(cb => {
        cb.addEventListener('change', async e => {
            const row = e.target.closest('tr');
            const requestId = row.dataset.requestId;
            const statut = e.target.dataset.status;

            // Désactiver autres checkboxes dans la même ligne
            row.querySelectorAll('.status-checkbox').forEach(other => { if(other!==e.target) other.checked=false; });

            try {
                const res = await fetch(`/demande/${requestId}/statut/${statut}`, { method:'POST' });
                const data = await res.json();
                alert(data.message);
            } catch(err) { console.error(err); }
        });
    });
});
</script>
{% endblock %}
</body>
</html>

{% extends 'navAdministration.html.twig' %}

{% block title %}Tableau de pilotage{% endblock %}

{% block body %}
<main class="dashboard">
    <h1 class="dashboard-title">Tableau de pilotage</h1>

    <section class="summary">
        <div class="summary-item">
            <span>Documents reçus :</span>
            <span class="summary-bar">{{ totalDocumentsRecus }}</span>
        </div>
        <div class="summary-item">
            <span>Documents en attente :</span>
            <span class="summary-bar">{{ documentsEnAttente }}</span>
        </div>
    </section>

    <section class="cards">
        <div class="custom-card card-recus">
            <h3>Documents reçus</h3>
            <p class="card-value">{{ totalDocumentsRecus }} dmds ⭐</p>
        </div>
        <div class="custom-card card-attente">
            <h3>Documents en attente</h3>
            <p class="card-value">{{ documentsEnAttente }}</p>
        </div>
    </section>

    <a href="{{ path('app_dashboard_pilotage') }}" class="dashboard-link">Voir le pilotage</a>
</main>
{% endblock %}

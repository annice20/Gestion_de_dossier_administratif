{% extends 'base.html.twig' %}

{% block title %}Décision{% endblock %}

{% block stylesheets %}
    <style>
        
        .container {
        }

        .text-center {
            text-align: center;
            color: #666;
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 40px;
        }

        .form-container {
            background-color: #d3d3d3;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            margin: 0 20px;
            width: 450px;
            height: 16cm;
            
            
             
        }

        .form-container h3 {
            color: #666;
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
            
        }

        .sign{
             background-color: #d3d3d3;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            margin: 0 20px;
            width: 450px;
            height: 16cm;
        }
        
        /* Styles pour les champs et boutons */
        .form-label {
            font-weight: bold;
            color: #444;
            display: block;
            margin-top: 15px;
            display: flex;
        }

        .form-control {
            width: 100%;
            padding: 8px;
            border: 1px solid #ffffffff;
            border-radius: 5px;
            box-sizing: border-box;
            
        }
        
        .form-select {
            background-image: url('data:image/svg+xml;utf8,<svg fill="%23000000" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><path d="M7 10l5 5 5-5z"/><path d="M0 0h24v24H0z" fill="none"/></svg>');
            background-repeat: no-repeat;
            background-position: right 8px center;
            background-size: 16px;
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
        }

        .merde{
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }
        .merde input {
            background-color: white;
        }

        .btn-decision {
            background-color: #63a8d1;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            width: 50%;
            margin-left: 2cm;
        }

        .btn-signature {
            background-color: #63a8d1;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            margin-top: 10px;
            width: 50%;
            margin-top: 2cm;
            margin-left: 2cm;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Décision</h1>
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="form-container">
                    {{ form_start(decisionForm) }}
                        {{ form_label(decisionForm.request, 'Demande associée :') }}
                        {{ form_widget(decisionForm.request, {'attr': {'class': 'form-select'}}) }}

                       <div class="merde">


                         {{ form_label(decisionForm.resultat, 'Résultat :') }}
                        {{ form_widget(decisionForm.resultat, {'attr': {'class': 'form-control'}}) }}

                        {{ form_label(decisionForm.motif, 'Motif :') }}
                        {{ form_widget(decisionForm.motif, {'attr': {'class': 'form-control'}}) }}
                        
                        {{ form_label(decisionForm.valide_par, 'Validé par :') }}
                        {{ form_widget(decisionForm.valide_par, {'attr': {'class': 'form-control'}}) }}

                        {{ form_label(decisionForm.valide_le, 'Validé le :') }}
                        {{ form_widget(decisionForm.valide_le, {'attr': {'class': 'form-control'}}) }}
                    </div>

                        {# Bouton de soumission masqué, car on a un bouton stylisé en dessous #}
                        {# {{ form_row(decisionForm.save) }} #}
                        <button type="submit" class="btn-decision">Enregistrer</button>
                    {{ form_end(decisionForm) }}
                </div>
            </div>
            
            <div class="col-md-5">
                <div class="sign">
                    <h3>Signature</h3>
                    {{ form_start(signatureForm) }}
                        {{ form_label(signatureForm.decision, 'Décision liée :') }}
                        {{ form_widget(signatureForm.decision, {'attr': {'class': 'form-select'}}) }}

                        <div class="merde">
                        {{ form_label(signatureForm.type, 'Type de signature :') }}
                        {{ form_widget(signatureForm.type, {'attr': {'class': 'form-control'}}) }}

                        {{ form_label(signatureForm.scelle, 'Scellé :') }}
                        {{ form_widget(signatureForm.scelle, {'attr': {'class': 'form-control'}}) }}

                         </div>

                        {{ form_label(signatureForm.horodatage, 'Horodatage :') }}
                        {{ form_widget(signatureForm.horodatage, {'attr': {'class': 'form-control'}}) }}

                        {# Bouton de soumission masqué, car on a un bouton stylisé en dessous #}
                        {# {{ form_row(signatureForm.saveSignature) }} #}
                        <button type="submit" class="btn-signature">Enregistrer</button>
                    {{ form_end(signatureForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'navAdministration.html.twig' %}

{% block title %}Hello ReceptionController!{% endblock %}

{% block body %}
 <title>File de réception - Liste des demandes</title>
    <style>
       
        h1 {
            text-align: center;
            font-size: 2.5em;
            margin-top: 20px;
            color: #1a1a1a;
        }
        .table-reception {
            border-collapse: separate;
            border-spacing: 0;
            width: 80%;
            margin: 30px auto;
            background: rgba(255,255,255,0.85);
            box-shadow: 0 2px 10px #adbfc8;
            border-radius: 12px;
        }
        .table-reception th, .table-reception td {
            padding: 18px;
            text-align: center;
            border-bottom: 1px solid #c5e1ed;
        }
        .table-reception th {
            background: #e3d2d2;
            font-weight: 600;
            font-size: 20px;
            color: #3d3838;
        }
        .btn-voir {
            background: #a66a23;
            color: white;
            padding: 10px 35px;
            border: none;
            border-radius: 17px;
            font-size: 18px;
            cursor: pointer;
            margin: 4px 0;
            transition: background .2s;
        }
        .btn-voir:hover {
            background: #c98e47;
        }
        input[type="checkbox"] {
            width: 28px;
            height: 28px;
            accent-color: #8b8b8b;
            border-radius: 6px;
            box-shadow: 0 1px 4px #a3b6c5;
        }
    </style>
</head>
<body>
    <h1>File de réception</h1>
    <table class="table-reception">
        <thead>
            <tr>
                <th>Nom document</th>
                <th>Voir le document</th>
                <th>Validé</th>
                <th>Refusé</th>
            </tr>
        </thead>
        <tbody>
            {% for request in requests %}
                <tr>
                    <td>{{ request.nomDocument }}</td>
                    <td><button class="btn-voir">Voir</button></td>
                    <td><input type="checkbox" {% if request.valide %}checked{% endif %} disabled></td>
                    <td><input type="checkbox" {% if request.refuse %}checked{% endif %} disabled></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune demande trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

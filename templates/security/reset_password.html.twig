{% extends 'couvre.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    <style>
        .card {
            width: 35%;
            margin: auto;
            margin-top: 60px;
            background-color: #C5ABAB;
            border-radius: 12px;
            padding: 2rem;
            text-align: center;
        }

        .form-control {
            margin-top: 1rem;
            height: 50px;
            border-radius: 12px;
            border: none;
            padding: 0 1.5rem;
            width: 100%;
            box-sizing: border-box;
            background-color: #f7f7f7;
            transition: background-color 0.3s;
        }

        .form-control:focus {
            outline: none;
            background-color: #fff;
        }
    </style>
    <div class="card">
        <div class="card-body">
            <h1 class="h3 mb-3 font-weight-normal">Réinitialiser votre mot de passe</h1>
            {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                {{ form_row(resetForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}

                <button class="btn btn-lg btn-primary mt-4" type="submit">
                    Envoyer
                </button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}

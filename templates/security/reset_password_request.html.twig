{% extends 'couvre.html.twig' %}

{% block title %}Demande de réinitialisation de mot de passe{% endblock %}

{% block body %}
    <style>
        .card {
            width: 35%;
            margin: auto;
            margin-top: 60px;
            background-color: #C5ABAB;
            border-radius: 12px;
            padding: 2rem;
            text-align: center;
        }

        .form-control {
            margin-top: 1rem;
            height: 50px;
            border-radius: 12px;
            border: none;
            padding: 0 1.5rem;
            width: 100%;
            box-sizing: border-box;
            background-color: #f7f7f7;
            transition: background-color 0.3s;
        }

        .form-control:focus {
            outline: none;
            background-color: #fff;
        }
    </style>
    <div class="card">
        <div class="card-body">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} mt-3">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <h1 class="h3 mb-3 font-weight-normal">Demande de réinitialisation de mot de passe</h1>
            {{ form_start(requestPassForm) }}
                {{ form_row(requestPassForm.email, {'attr': {'class': 'form-control'}}) }}

                <button class="btn btn-lg btn-primary mt-4" type="submit">
                    Envoyer
                </button>
            {{ form_end(requestPassForm) }}
            
            <a class="btn btn-lg btn-success mt-2" href="{{ path('app_login') }}"><i class="fas fa-arrow-left"></i> Retour</a>
        </div>
    </div>
{% endblock %}

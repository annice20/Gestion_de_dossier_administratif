{% extends 'base.html.twig' %}

{% block title %}Liste des Services{% endblock %}

{% block body %}
<style>

.container3{
    display: flex;
    gap: 4rem;
    margin: 0 auto;
    top: 0;
    justify-content: center;
    padding: 1rem;
}
.header3{
    text-align: center;
    margin-bottom: 1rem;
}
.table {
    height: 25rem;
}

.demande-header2 {
    text-align: center;
    margin-bottom: 1rem;
}
.btn-valider {
    display: block;
    margin: 2rem auto;
    padding: 0.5rem 2rem;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
    &:hover {
       transform: translate(-3px);
       -webkit-transform: translate(-3px);
       -moz-transform: translate(-3px);
       -ms-transform: translate(-3px);
       -o-transform: translate(-3px);
}
}
.form-field-row label{
    color: black;
    margin-right: 100%;
}
.form-field-row input{
   height: 2rem;
   background: white;
}
.form-field-row select{
    height: 2rem;
}
.btnn{
    background-color: green;
    height: auto;
    text-align: center;
    justify-content: center;
}
.demande-sectionn {
    width: 30%;
    background-color: #D9D9D9;
    padding: 2rem;
    border-radius: 1rem;
    -webkit-border-radius: 1rem;
    -moz-border-radius: 1rem;
    -ms-border-radius: 1rem;
    -o-border-radius: 1rem;
}

</style>
    <div class="container3">
        <div class="service-table">
            <div class="header3">
                <h1>LISTE DES SERVICES</h1>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Lequel</th>
                        <th>Pièces requises</th>
                        <th>Délais</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-primary">Acte de naissance</td>
                        <td>
                            <div class="piece-item">• Livre de famille</div>
                            <div class="piece-item">• Résidence</div>
                        </td>
                        <td>2 heures</td>
                    </tr>
                    <tr>
                        <td class="text-primary">Acte de mariage</td>
                        <td>
                            <div class="piece-item">• Acte de naissance</div>
                            <div class="piece-item">• Résidence</div>
                            <div class="piece-item">• Acte de célibataire</div>
                        </td>
                        <td>Le jour du mariage</td>
                    </tr>
                    <tr>
                        <td class="text-primary">Acte de décès</td>
                        <td>
                            <div class="piece-item">• Certificat de décès</div>
                            <div class="piece-item">• Pièce d'identité du commandeur</div>
                            <div class="piece-item">• Montantes sur le déficient</div>
                            <div class="piece-item">• Livret de famille</div>
                        </td>
                        <td>24 heures</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="demande-sectionn">
            <div class="demande-header2">
                <h1>DEMANDE</h1>
            </div>

        <div class="demande-form">
            <h2>Formulaire de demande</h2>




<div class="container mt-4">
    <h1 class="mb-4">Créer une nouvelle demande de service</h1>

   


<div class="container mt-4">
    <h1 class="mb-4">Créer une nouvelle demande de service</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.ref) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.demandeur) }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.type) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.centre) }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.statut) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.priorite) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.canal) }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.montant) }}
                </div>
            </div>
            
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Créer la demande</button>
                <a href="{{ path('services_liste_index') }}" class="btn btn-secondary">Annuler</a>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% if form.type.vars.choices is not empty %}

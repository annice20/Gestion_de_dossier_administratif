    // - Afficher les pièces requises pour le type sélectionné
    // - etc.
    
    const typeSelect = document.getElementById('{{ form.type.vars.id }}');
    if (typeSelect) {
        typeSelect.addEventListener('change', function() {
            // Exemple: charger les détails du type de demande
            console.log('Type sélectionné:', this.value);
            // Ici vous pourriez faire un appel AJAX pour récupérer les infos
        });
    }
});
</script>
{% endif %}


{% endblock %}
